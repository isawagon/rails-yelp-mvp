<div class="container">
  <div class="row">
    <div class = "col-6 offset-3">
      <h1>Review for <%= @restaurant.name %></h1>
      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.submit "Submit Your Review" %>
        <% end %>
    </div>
    
    <%= link_to "Back to list", restaurants_path %>
  </div>
</div>
